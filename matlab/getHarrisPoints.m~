function [points] = getHarrisPoints(I, alpha, k)
    I = double(rgb2gray(I))
    
    % precompute the image's X and Y gradients
    [Ix, Iy] = gradient(I);
    [Ix2, Ixy] = gradient(Ix);
    [Iyx, Iy2] = gradient(Iy);
    
    % compute the covariance matrix
    M11 = imfilter(Ixx, window);
    M12 = imfilter(Ixy, window);
    M21 = imfilter(Iyx, window);
    M22 = imfilter(Iyy, window);
    
    % compute the response function
    detM = M11 .* M22 - M12 .* M21;
    ktrM2 = ((M11 + M21) .^ 2) * k;
    R = detM - ktrM2;
    
    % non-max suppression
    [~, idx]
end